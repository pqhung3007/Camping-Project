<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campgrounds</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" , method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="campground[image]" id="">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input id="price" type="text" class="form-control" placeholder="0.00" aria-label="Username"
                            aria-describedby="price-label" name="campground[price]">
                    </div>

                </div>

                <div class="mb-3">
                    <label for="">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description"></textarea>
                </div>
                <button class="mt-3 mb-2">Add Campground</button>
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>